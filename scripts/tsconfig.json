{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2022",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "sourceMap": true,
    "paths": {
      "@template/global-config": ["../libs/global-config/src"]
    },
    "rootDir": "./src"
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
